# ==============================================
# API CONFIGURATION
# ==============================================
# Backend API Base URL
# Development: http://localhost:5000/api
# Production: https://api.creatorhub.com/api
VITE_API_BASE_URL=http://localhost:5000/api

# API Request Timeout (milliseconds)
VITE_API_TIMEOUT=30000

# ==============================================
# ENVIRONMENT
# ==============================================
VITE_NODE_ENV=production

# ==============================================
# APPLICATION SETTINGS
# ==============================================
# App Name
VITE_APP_NAME=CreatorHub

# Max file upload size (in bytes) - 50MB
VITE_MAX_FILE_SIZE=52428800

# Supported media formats
VITE_SUPPORTED_IMAGE_FORMATS=jpg,jpeg,png
VITE_SUPPORTED_VIDEO_FORMATS=mp4,mov

# ==============================================
# INSTAGRAM FEATURES
# ==============================================
# Enable/Disable features in production
VITE_ENABLE_DM_AUTOMATION=true
VITE_ENABLE_POST_SCHEDULING=true
VITE_ENABLE_STORY_AUTOMATION=true
VITE_ENABLE_ANALYTICS=true

# ==============================================
# UI CONFIGURATION
# ==============================================
# Auto-save interval for drafts (milliseconds)
VITE_AUTOSAVE_INTERVAL=30000

# Session timeout warning (milliseconds before expiry)
VITE_SESSION_WARNING_TIME=300000

# ==============================================
# OPTIONAL - ANALYTICS & MONITORING
# ==============================================
# VITE_GOOGLE_ANALYTICS_ID=G-XXXXXXXXXX
# VITE_SENTRY_DSN=https://xxxxx@sentry.io/xxxxx

# ==============================================
# OPTIONAL - THIRD-PARTY INTEGRATIONS
# ==============================================
# VITE_STRIPE_PUBLISHABLE_KEY=pk_live_xxxxx
